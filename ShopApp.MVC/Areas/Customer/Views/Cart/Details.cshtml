@model ShopApp.DataAccess.Models.CartItem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
	<a asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 btn-sm text-uppercase">Back to List</a>
</div>

<div>
    <h4>Product</h4>
    <hr />
    <img src="\images\products\@Model.Product.ImageUrl" height="100" width="100" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.ListPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.ListPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product.SalePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.SalePrice)
        </dd>
    </dl>
</div>


<div class="row">
    <div class="col-md-2">
		<div class="input-group">
			<span class="input-group-text" id="inputGroup-sizing-default">
				Count
			</span>
			<input type="number" value="1" class="form-control text-end" />
		</div>
    </div>
</div>


<div class="row">
	<div class="col">

		<button type="submit" disabled class="btn btn-primary bg-gradient">
			Add to Cart
		</button>
		@* <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> *@
	</div>
</div>

